extends ../layout

block content
    .container
        .row
            .col-xs-3
                .list-group
                    each item in ['技术帖','心灵鸡汤','乱七八糟','...']
                        a.list-group-item(href="#") #{item}
            .col-xs-9
                .panel.panel-default
                    .panel-body
                        table.table.table-striped
                            thead
                                tr
                                    th 
                                        input(type='checkbox')
                                    th ID
                                    th 标题
                                    th 作者
                                    th 概要
                                    //- th 日期
                                    th 操作
                            tbody
                                each i in articles
                                    tr(class='item-id-#{i._id}')
                                        td 
                                            input(type='checkbox')
                                        td #{i._id}
                                        td #{i.title}
                                        td #{i.author}
                                        td #{i.summary}
                                        //- td #{i._date}
                                        td 
                                            a(href='/manage/update/#{i.id}',target="_blank")
                                                span 修改                                           
                                            button.btn.btn-danger.btn-sm.del(type="button" data-id='#{i._id}') 删除
                        nav(aria-label="page navigation")
                            ul.pagination
                                li
                                    a(href="#",aria-label="Previous")
                                        span(aria-hidden="true") &laquo;
                                -for(var i=1;i<10;i++)
                                    li <a href="#">#{i}</a>
                                li
                                    a(href="#",aria-label="Previous")
                                        span(aria-hidden="true") &raquo;

                        script(src="../js/del.js")